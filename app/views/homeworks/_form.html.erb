<%= form_for(@homework) do |f| %>
  <% if @homework.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@homework.errors.count, "error") %> prohibited this homework from being saved:</h2>

      <ul>
      <% @homework.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Název:',:class => 'text-field' %><br>
    <%= f.text_field :name ,:alt => 'Název domácího úkolu' %>
  </div>
  <div class="field">
    <%= f.label :subject_id, 'Do předmětu:',:class => 'text-field' %><br>
    <%= f.select :subject_id, options_for_select(Subject.all.collect{|subject| ["#{subject.name}", subject.id]}, @homework.subject_id), include_blank: true ,:alt => 'Domácí úkol do předmětu' %>
  </div>
  <div class="field">
    <%= f.label :date, 'Datum odevzdání:',:class => 'text-field' %><br>
    <%= f.date_select :date ,:alt => 'Datum odevzdání domácího úkolu' %>
  </div>
  <div class="field">
    <%= f.label :note, 'Poznámka:',:class => 'text-field' %><br>
    <%= f.text_field :note ,:alt => 'Poznámka k úkolu' %>
  </div>
  <div class="actions">
    <%= f.submit 'Uložit', :class => 'button-color' %>
  </div>
<% end %>
