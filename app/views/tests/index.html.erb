<h1>Listing tests</h1>

<table id= "pubs" class="table table-bordered" style="max-width:80%; color:white">
  <thead>
    <tr>
      <th class="col-md-3">Name</th>
      <th class="col-md-3">Subject</th>
      <th class="col-md-3">Start date</th>
      <th class="col-md-3" colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td class="col-md-3"><%= test.name %></td>
        <td class="col-md-3"><%= test.subject.name %></td>
        <td class="col-md-3"><%= test.start_date %></td>
        <td class="col-md-1"><%= link_to 'Show', test %></td>
        <td class="col-md-1"><%= link_to 'Edit', edit_test_path(test) %></td>
        <td class="col-md-1"><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

