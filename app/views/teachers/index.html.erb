<h1>Přehled učitelů</h1>

<table>
  <thead>
    <tr>
      <th>Jméno</th>
      <th>Příjmení</th>
      <th>Titul</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.surname %></td>
        <td><%= teacher.title %></td>
        <td><%= link_to 'Zobrazit', teacher %></td>
        <td><%= link_to 'Editovat', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Smazat', teacher, method: :delete, data: { confirm: 'Opravdu chcete pokračovat?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Přidat nového učitele', new_teacher_path %>
